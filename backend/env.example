# KYC Backend Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# Blockchain Configuration
KYC_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
BACKEND_PRIVATE_KEY=your_private_key_here
RPC_URL=https://testnet.sapphire.oasis.dev

# Encryption
ENCRYPTION_PASSWORD=your_secure_encryption_password_here

# KYC Provider Configuration
DEFAULT_KYC_PROVIDER=mock

# Jumio Configuration (optional)
JUMIO_API_TOKEN=your_jumio_api_token
JUMIO_API_SECRET=your_jumio_api_secret
JUMIO_BASE_URL=https://netverify.com

# Onfido Configuration (optional)
ONFIDO_API_TOKEN=your_onfido_api_token
ONFIDO_BASE_URL=https://api.onfido.com/v3

# IPFS Configuration (optional)
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_PROJECT_ID=your_ipfs_project_id
IPFS_PROJECT_SECRET=your_ipfs_project_secret

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Database Configuration (if using database for caching)
# DATABASE_URL=postgresql://username:password@localhost:5432/kyc_db

# Logging
LOG_LEVEL=info
LOG_FILE=logs/kyc-service.log 